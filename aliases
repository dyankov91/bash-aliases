# Load Generic Aliases
# -----------------------------------------------
if [ -f ~/.bash/generic-aliases ]; then
    . ~/.bash/generic-aliases
fi

# Load Git Aliases
# -----------------------------------------------
if [ -f ~/.bash/git-aliases ]; then
    . ~/.bash/git-aliases
fi

# Load User Specific Aliases (.gitignored)
# -----------------------------------------------
if [ -f ~/.bash/user-aliases ]; then
    . ~/.bash/user-aliases
fi
